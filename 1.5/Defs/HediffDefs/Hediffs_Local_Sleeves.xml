<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- ================================ Sleeve Base ====================== -->
	<HediffDef Name="AC_SleeveBase" Abstract="True">
		<hediffClass>HediffWithComps</hediffClass>
		<initialSeverity>0.001</initialSeverity>
		<isBad>false</isBad>
		<makesSickThought>false</makesSickThought>
	</HediffDef>
	<HediffDef ParentName="AC_SleeveBase">
		<defName>AC_EmptySleeve</defName>
		<label>empty sleeve</label>
		<description>An empty sleeve.</description>
		<isBad>false</isBad>
		<stages>
			<li>
				<label>empty</label>
				<becomeVisible>false</becomeVisible>
				<painFactor>0</painFactor>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.01</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	<!-- ================================ Sleeve Shock Hediff ====================== -->
	<HediffDef ParentName="AC_SleeveBase">
		<defName>AC_SleeveShock</defName>
		<label>sleeve shock</label>
		<description>A dissonance between the host body and the transferred consciousness.It typically manifests with disorientation, impaired motor functions and nausea as the new consciousness adjusts to its physical vessel.\nOver time the consciousness and the sleeve harmonize as the brain adapts to its new physical form, reducing symptoms and restoring full functionality. The adjustment period varies by individual.</description>
		<descriptionShort>A temporary sickness that arises when a transferred consciousness struggles to adapt to a new physical body, initially causing symptoms like disorientation and nausea.</descriptionShort>
		<isBad>true</isBad>
		<makesSickThought>true</makesSickThought>
		<initialSeverity>1</initialSeverity>
		<maxSeverity>1</maxSeverity>
		<stages>
			<li>
				<label>wearing off</label>
				<partEfficiencyOffset>-0.1</partEfficiencyOffset>
				<vomitMtbDays>1</vomitMtbDays>
				<minSeverity>0.1</minSeverity>
				<painOffset>0.2</painOffset>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.2</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.2</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.5</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>irritated</label>
				<partEfficiencyOffset>-0.4</partEfficiencyOffset>
				<vomitMtbDays>3</vomitMtbDays>
				<minSeverity>0.5</minSeverity>
				<painOffset>0.25</painOffset>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.5</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.5</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.10</offset>
					</li>
				</capMods>
				<mentalStateGivers>
					<li>
						<mentalState>WanderConfused</mentalState>
						<mtbDays>50</mtbDays>
					</li>
				</mentalStateGivers>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.5</severityPerDay>
			</li>
		</comps>
	</HediffDef>
	

  <ThoughtDef>
    <defName>AC_ScanningSickness</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>AC_ScanningSickness</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
    <stages>
      <li>
        <label>scanning sickness</label>
        <description>Ever since that scan I've been dizzy and I can't think.</description>
        <baseMoodEffect>-8</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <HediffDef ParentName="DiseaseBase">
    <defName>AC_ScanningSickness</defName>
    <label>Scanning sickness</label>
    <description>This person was scanned by a softscanner to produce a mechanoid subcore. The high-energy scanning device has caused disturbances in their brain chemistry which will take time to resolve themselves. There won't be any long-term damage.</description>
    <initialSeverity>4</initialSeverity>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1</severityPerDay>
        <mechanitorFactor>2</mechanitorFactor>
      </li>
    </comps>
    <stages>
      <li>
        <vomitMtbDays>1.5</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <postFactor>0.75</postFactor>
          </li>
          <li>
            <capacity>Moving</capacity>
            <postFactor>0.75</postFactor>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <postFactor>0.75</postFactor>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
</Defs>