<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- ================================ Persona Stack Hediff ====================== -->
	<HediffDef ParentName="ImplantHediffBase">
		<defName>AC_PersonaStack</defName>
		<label>persona stack</label>
		<labelNoun>a persona stack</labelNoun>
		<hediffClass>AlteredCarbon.Hediff_PersonaStack</hediffClass>
		<description>An installed persona stack.</description>
		<descriptionHyperlinks>
			<ThingDef>AC_FilledPersonaStack</ThingDef>
		</descriptionHyperlinks>
		<spawnThingOnRemoved>AC_FilledPersonaStack</spawnThingOnRemoved>
		<isBad>false</isBad>
		<addedPartProps>
			<solid>true</solid>
			<partEfficiency>1.25</partEfficiency>
			<betterThanNatural>true</betterThanNatural>
		</addedPartProps>
	</HediffDef>
	<!-- ================================ Parroter Stack Hediff	====================== -->
	<HediffDef ParentName="ImplantHediffBase">
		<defName>AC_ParroterStack</defName>
		<label>parroter stack</label>
		<labelNoun>a parroter stack</labelNoun>
		<hediffClass>AlteredCarbon.Hediff_ParroterStack</hediffClass>
		<description>An installed parroter stack.</description>
		<descriptionHyperlinks>
			<ThingDef>AC_ParroterStack</ThingDef>
		</descriptionHyperlinks>
		<spawnThingOnRemoved>AC_ParroterStack</spawnThingOnRemoved>
		<isBad>false</isBad>
		<addedPartProps>
			<solid>true</solid>
			<partEfficiency>1</partEfficiency>
			<betterThanNatural>true</betterThanNatural>
		</addedPartProps>
	</HediffDef>
	<!-- ================================ Needlecast Coma Hediff ====================== -->
	<HediffDef ParentName="AC_SleeveBase">
		<defName>AC_NeedlecastingStasis</defName>
		<label>needlecasting stasis</label>
		<description>A temporary comatose state that minimises metabolic activity while the caster operates a remote sleeve. The original body reawakens seamlessly once the connection is severed, resuming normal biological functions as the consciousness returns.</description>
		<isBad>false</isBad>
		<initialSeverity>1</initialSeverity>
		<maxSeverity>1</maxSeverity>
		<stages>
			<li>
				<painFactor>0</painFactor>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.01</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	<!-- ================================ Needlecast Sickness Hediff ====================== -->
	<HediffDef ParentName="AC_SleeveBase">
		<defName>AC_NeedlecastingSickness</defName>
		<label>needlecasting sickness</label>
		<description>After-effects of needlecasting and controlling a remote sleeve.using a cryptosleep pod. Upon severing the connection, the body takes time to restart and rebalance its natural metabolic processes. While this is ongoing, the caster suffers from nausea and slight dizziness for a short time.</description>
		<makesSickThought>true</makesSickThought>
		<isBad>false</isBad>
		<stages>
			<li>
				<vomitMtbDays>0.135</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<postFactor>0.1</postFactor>
					</li>
					<li>
						<capacity>Moving</capacity>
						<postFactor>0.1</postFactor>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<postFactor>0.1</postFactor>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>2000~5000</disappearsAfterTicks>
				<showRemainingTime>true</showRemainingTime>
			</li>
		</comps>
	</HediffDef>
</Defs>