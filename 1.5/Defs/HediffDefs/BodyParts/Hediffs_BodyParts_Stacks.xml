<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- ================================ Persona Stack - Base ====================== -->
	<ThingDef Name="AC_StackBase" ParentName="BodyPartArchotechBase" Abstract="True">
		<techLevel>Ultra</techLevel>
		<uiIconForStackCount>1</uiIconForStackCount>
		<tradeNeverStack>false</tradeNeverStack>
		<useHitPoints>true</useHitPoints>
		<statBases>
			<Mass>0.4</Mass>
			<DeteriorationRate>0.3</DeteriorationRate>
			<MaxHitPoints>125</MaxHitPoints>
			<Flammability>0</Flammability>
			<MarketValue>950</MarketValue>
		</statBases>
		<thingCategories Inherit="False">
			<li>AC_BodyPartsUltra</li>
		</thingCategories>
		<techHediffsTags Inherit="False">
			<li>Ultra</li>
		</techHediffsTags>
		<comps>
			<li Class="HediffCompProperties_ReactOnDamage">
				<damageDefIncoming>EMP</damageDefIncoming>
				<createHediff>BrainShock</createHediff>
			</li>
		</comps>
		<modExtensions>
			<li Class="AlteredCarbon.StackSavingOptionsModExtension">
				<ignoresTraits>
					<li>Beauty</li>
					<li>Immunity</li>
					<li>AnnoyingVoice</li>
					<li>CreepyBreathing</li>
					<li>Tough</li>
					<li>PsychicSensitivity</li>
					<li>Delicate</li>
					<li MayRequire="Ludeon.RimWorld.Anomaly">BodyMastery</li>
					<li MayRequire="VanillaExpanded.VanillaExpanded.VPsycastsE">VPE_Thrall</li>
					<li MayRequire="VanillaExpanded.VanillaTraitsExpanded">VTE_IronStomach</li>
					<li MayRequire="VanillaExpanded.VanillaTraitsExpanded">VTE_BigBoned</li>
					<li MayRequire="VanillaExpanded.VanillaTraitsExpanded">VTE_Dunce</li>
					<li MayRequire="VanillaExpanded.VanillaTraitsExpanded">VTE_Squeamish</li>
					<li MayRequire="VanillaExpanded.VanillaTraitsExpanded">VTE_ThickSkinned</li>
					<li MayRequire="VanillaExpanded.VanillaTraitsExpanded">VTE_ThinSkinned</li>
					<li MayRequire="OskarPotocki.VFE.Pirates">VFEP_WarcasketTrait</li>
					<li MayRequire="OskarPotocki.VFE.Pirates">VFEP_Shellcasket</li>
					<li MayRequire="sarg.alphagenes">AG_Beauty</li>
					<li MayRequire="syrchalis.individuality">SYR_Agile</li>
					<li MayRequire="syrchalis.individuality">SYR_KeenEye</li>
					<li MayRequire="syrchalis.individuality">SYR_StrongBack</li>
					<li MayRequire="Sierra.RTGT">RT_Nearsighted</li>
					<li MayRequire="Sierra.RTGT">RT_Farsighted</li>
					<li MayRequire="Sierra.RTGT">RT_Muscular</li>
					<li MayRequire="Sierra.RTGT">RT_Frail</li>
					<li MayRequire="Sierra.RTGT">RT_Hardy</li>
					<li MayRequire="Sierra.RTGT">RT_Feeble</li>
					<li MayRequire="Sierra.RTGT">RT_Healthy</li>
					<li MayRequire="Sierra.RTGT">RT_ChronicallyIll</li>
				</ignoresTraits>
			</li>
		</modExtensions>
	</ThingDef>
	<!-- ================================ Empty Persona Stack ====================== -->
	<ThingDef ParentName="AC_StackBase">
		<defName>AC_EmptyPersonaStack</defName>
		<label>empty persona stack</label>
		<description>An ultratech cortical implant which can store a human consciousness, commonly referred to as a persona. Once implanted directly into a person's spine in the neck it will download their consciousness and safely store it. While the death of an organic or inorganic body is no longer a concern, being a fragile piece of technology, blunt force trauma and bullets to the neck area should be avoided at all cost./n/nExtremely rare, heavily restricted and hard to produce, these implants are rare on non-ultratech worlds.</description>
		<thingClass>AlteredCarbon.PersonaStack</thingClass>
		<graphicData>
			<texPath>Things/Item/PersonaStacks/EmptyStack</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<descriptionHyperlinks>
			<RecipeDef>AC_InstallPersonaStack</RecipeDef>
		</descriptionHyperlinks>
		<stackLimit>10</stackLimit>
		<costList>
			<Plasteel>15</Plasteel>
			<ComponentSpacer>4</ComponentSpacer>
		</costList>
		<thingSetMakerTags>
			<li>RewardStandardLowFreq</li>
		</thingSetMakerTags>
		<tradeTags Inherit="False">
			<li>AC_StacksUltra</li>
			<li MayRequire="Ludeon.RimWorld.Royalty">ImplantEmpireRoyal</li>
			<li>ExoticMisc</li>
		</tradeTags>
	</ThingDef>
	<!-- ================================ Persona Stacks - Install Empty ====================== -->
	<RecipeDef ParentName="SurgeryInstallImplantBase">
		<defName>AC_InstallEmptyPersonaStack</defName>
		<label>install empty persona stack</label>
		<description>Install an empty persona stack.</description>
		<descriptionHyperlinks>
			<ThingDef>AC_EmptyPersonaStack</ThingDef>
		</descriptionHyperlinks>
		<workerClass>AlteredCarbon.Recipe_InstallPersonaStack</workerClass>
		<jobString>Installing persona stack.</jobString>
		<uiIconThing>AC_EmptyPersonaStack</uiIconThing>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>AC_EmptyPersonaStack</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>AC_EmptyPersonaStack</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>Neck</li>
		</appliedOnFixedBodyParts>
		<addsHediff>AC_PersonaStack</addsHediff>
	</RecipeDef>
	<!-- ================================ Filled Persona Stack ====================== -->
	<ThingDef ParentName="AC_StackBase">
		<defName>AC_FilledPersonaStack</defName>
		<label>persona stack</label>
		<description>An ultratech cortical implant with a human consciousness stored on it, commonly referred to as a persona. Can be implanted directly into a person's or sleeveâ€™s spine in the neck to bring back the person stored on the stack.</description>
		<thingClass>AlteredCarbon.PersonaStack</thingClass>
		<graphicData>
			<texPath>Things/Item/PersonaStacks/FriendlyStack</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<descriptionHyperlinks>
			<RecipeDef>AC_InstallPersonaStack</RecipeDef>
		</descriptionHyperlinks>
		<tickerType>Normal</tickerType>
		<uiIconForStackCount>1</uiIconForStackCount>
		<healthAffectsPrice>true</healthAffectsPrice>
		<stackLimit>1</stackLimit>
		<tradeNeverStack>false</tradeNeverStack>
		<tradeTags Inherit="False"/>
		<inspectorTabs>
			<li>ITab_Pawn_Character</li>
		</inspectorTabs>
	</ThingDef>
	<!-- ================================ Persona Stack Hediff ====================== -->
	<HediffDef ParentName="ImplantHediffBase">
		<defName>AC_PersonaStack</defName>
		<label>persona stack</label>
		<labelNoun>a persona stack</labelNoun>
		<hediffClass>AlteredCarbon.Hediff_PersonaStack</hediffClass>
		<description>An installed persona stack.</description>
		<descriptionHyperlinks>
			<ThingDef>AC_FilledPersonaStack</ThingDef>
		</descriptionHyperlinks>
		<spawnThingOnRemoved>AC_FilledPersonaStack</spawnThingOnRemoved>
		<isBad>false</isBad>
		<addedPartProps>
			<solid>true</solid>
			<partEfficiency>1.25</partEfficiency>
			<betterThanNatural>true</betterThanNatural>
		</addedPartProps>
	</HediffDef>
