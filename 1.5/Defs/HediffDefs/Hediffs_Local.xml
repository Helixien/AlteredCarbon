<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- ================================ Sleeve Base ====================== -->
	<HediffDef Name="AC_SleeveBase" Abstract="True">
		<hediffClass>HediffWithComps</hediffClass>
		<initialSeverity>0.001</initialSeverity>
		<isBad>false</isBad>
		<makesSickThought>false</makesSickThought>
	</HediffDef>
	<HediffDef ParentName="AC_SleeveBase">
		<defName>AC_EmptySleeve</defName>
		<label>empty sleeve</label>
		<description>An empty sleeve.</description>
		<isBad>false</isBad>
		<stages>
			<li>
				<label>empty</label>
				<becomeVisible>false</becomeVisible>
				<painFactor>0</painFactor>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.01</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	<!-- ================================ Sleeve Shock Hediff ====================== -->
	<HediffDef ParentName="AC_SleeveBase">
		<defName>AC_SleeveShock</defName>
		<label>sleeve shock</label>
		<description>In shock due to switching bodies.</description>
		<isBad>true</isBad>
		<initialSeverity>1</initialSeverity>
		<maxSeverity>1</maxSeverity>
		<stages>
			<li>
				<label>wearing off</label>
				<partEfficiencyOffset>-0.02</partEfficiencyOffset>
				<vomitMtbDays>1</vomitMtbDays>
				<minSeverity>0.1</minSeverity>
				<painOffset>0.02</painOffset>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.02</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.02</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>irritated</label>
				<partEfficiencyOffset>-0.05</partEfficiencyOffset>
				<vomitMtbDays>3</vomitMtbDays>
				<minSeverity>0.5</minSeverity>
				<painOffset>0.05</painOffset>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.10</offset>
					</li>
				</capMods>
				<mentalStateGivers>
					<li>
						<mentalState>WanderConfused</mentalState>
						<mtbDays>50</mtbDays>
					</li>
				</mentalStateGivers>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.5</severityPerDay>
			</li>
		</comps>
	</HediffDef>
	<!-- ================================ Cortical Stack Degradation ====================== -->
	<HediffDef>
		<defName>AC_StackDegradation</defName>
		<label>degradation</label>
		<labelNoun>stack degradation</labelNoun>
		<hediffClass>AlteredCarbon.Hediff_StackDegradation</hediffClass>
		<description>Cortical stack degradation caused by an unauthorized, aggressive rewrite.</description>
		<isBad>false</isBad>
		<defaultLabelColor>(1, 0, 0)</defaultLabelColor>
	</HediffDef>
	<!-- ================================ Degradation - Brain Trauma ====================== -->
	<HediffDef>
		<defName>AC_BrainTrauma</defName>
		<label>brain trauma</label>
		<labelNoun>a brain trauma</labelNoun>
		<description>A brain injury resulting in loss of communication, forgetfulness, and involuntary motor functions.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<cureAllAtOnceIfCuredByItem>true</cureAllAtOnceIfCuredByItem>
		<stages>
			<li>
				<partIgnoreMissingHP>true</partIgnoreMissingHP>
				<!-- to avoid penalties from brain injuries, so manipulation is 100%+ -->
				<opinionOfOthersFactor>0</opinionOfOthersFactor>
				<partEfficiencyOffset>-0.15</partEfficiencyOffset>
				<forgetMemoryThoughtMtbDays>14</forgetMemoryThoughtMtbDays>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<setMax>0</setMax>
					</li>
					<li>
						<capacity>Hearing</capacity>
						<setMax>0</setMax>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.5</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	<!-- ================================ Armour Pain Protection ====================== -->
	<HediffDef>
		<defName>AC_PainProtection</defName>
		<label>pain protection</label>
		<labelNoun>pain protection</labelNoun>
		<description>pain protection</description>
		<hediffClass>HediffWithComps</hediffClass>
		<stages>
			<li>
				<painFactor>0</painFactor>
			</li>
		</stages>
	</HediffDef>
	<!-- ================================ Deterioration Hediff ====================== -->
	<HediffDef ParentName="InjuryBase">
		<defName>AC_Deterioration</defName>
		<label>deterioration</label>
		<labelNoun>a deterioration</labelNoun>
		<description>A deterioration.</description>
		<tendable>false</tendable>
		<comps>
			<li Class="HediffCompProperties_Infecter">
				<infectionChance>0.30</infectionChance>
			</li>
		</comps>
		<injuryProps>
			<painPerSeverity>0.01875</painPerSeverity>
			<averagePainPerSeverityPermanent>0.00625</averagePainPerSeverityPermanent>
			<canMerge>true</canMerge>
			<destroyedLabel>deteriorated</destroyedLabel>
			<destroyedOutLabel>deteriorated</destroyedOutLabel>
		</injuryProps>
	</HediffDef>
</Defs>