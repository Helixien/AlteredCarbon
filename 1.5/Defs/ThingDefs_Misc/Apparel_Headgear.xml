	<!-- ================================ Chrysalis Armour - Helmet ====================== -->
	<ThingDef ParentName="AC_ApparelArmorHelmetChrysalisBase">
		<defName>AC_Apparel_ChrysalisHelmet</defName>
		<label>chrysalis helmet</label>
		<description>An advanced next-gen helmet, with a solid plasteel-weave shell and complex visual system for near 360 degree view angles and tactical telemetry feed, including aim assist.</description>
		<statBases>
			<VEF_RangedCooldownFactor>0.82</VEF_RangedCooldownFactor>
		</statBases>
		<recipeMaker>
			<displayPriority>135</displayPriority>
		</recipeMaker>
		<costList>
			<ComponentSpacer>1</ComponentSpacer>
			<Plasteel>35</Plasteel>
		</costList>
		<equippedStatOffsets>
			<AimingDelayFactor>-0.2</AimingDelayFactor>
			<ShootingAccuracyPawn>5</ShootingAccuracyPawn>
		</equippedStatOffsets>
	</ThingDef>
