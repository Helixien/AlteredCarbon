<Defs>
	<!-- ================================ Base ====================== -->
	<ThingDef Name="AC_ApparelArmorUltraBase" ParentName="ArmorMachineableBase" Abstract="True">
		<techLevel>Ultra</techLevel>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
			<researchPrerequisite>PoweredArmor</researchPrerequisite>
			<skillRequirements>
				<Crafting>10</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
				<li>FabricationBench</li>
			</recipeUsers>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/PowerArmor/PowerArmor</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<generateCommonality>0.5</generateCommonality>
		<statBases>
			<Flammability>0.2</Flammability>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.4</MoveSpeed>
			<SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.5</SlaveSuppressionOffset>
		</equippedStatOffsets>
		<thingCategories>
			<li>ApparelArmor</li>
		</thingCategories>
		<tradeTags>
			<li>UltraTechArmor</li>
			<li>HiTechArmor</li>
			<li>Armor</li>
		</tradeTags>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<layers>
				<li>Middle</li>
				<li>Shell</li>
			</layers>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<useDeflectMetalEffect>true</useDeflectMetalEffect>
			<soundWear>Wear_PowerArmor</soundWear>
			<soundRemove>Remove_PowerArmor</soundRemove>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>(0.9,0.9,0.9)</only>
				</li>
