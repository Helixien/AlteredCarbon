<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- ================================ Duplication Thoughts - Lovers ====================== -->
	<ThoughtDef>
		<defName>AC_JustCopy</defName>
		<durationDays>60</durationDays>
		<stackLimit>1</stackLimit>
		<nullifyingTraits>
			<li>Transhumanist</li>
			<li>Psychopath</li>
		</nullifyingTraits>
		<nullifyingPrecepts>
			<li MayRequire="Ludeon.RimWorld.Ideology">AC_StackDuplicating_DontCare</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">AC_StackDuplicating_Enlightened</li>
		</nullifyingPrecepts>
		<stages>
			<li>
				<label>Just a copy</label>
				<description>I am nothing more than a copy... What even am I?</description>
				<baseMoodEffect>-15</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>AC_LostMySpouse</defName>
		<durationDays>30</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>Lost my spouse</label>
				<description>My spouse stayed with my original, but I still love them. This isn't fair...</description>
				<baseMoodEffect>-10</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>AC_LostMyFiance</defName>
