<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- ================================ Wrong Sleeve Xenotype ====================== -->
	<ThoughtDef>
		<defName>AC_WrongXenotype</defName>
		<durationDays>35</durationDays>
		<stackLimit>1</stackLimit>
		<nullifyingTraits>
			<li>Masochist</li>
			<li>AC_FreeMind</li>
		</nullifyingTraits>
		<nullifyingPrecepts>
			<li MayRequire="Ludeon.RimWorld.Ideology">AC_XenoSleeving_DontCare</li>
		</nullifyingPrecepts>
		<stages>
			<li>
				<label>different sleeve xenotype</label>
				<description>The xenotype of my sleeve is not my own, this feels wrong.</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<!-- ================================ Wrong Sleeve Gender ====================== -->
	<ThoughtDef>
		<defName>AC_WrongGender</defName>
		<durationDays>30</durationDays>
		<stackLimit>1</stackLimit>
