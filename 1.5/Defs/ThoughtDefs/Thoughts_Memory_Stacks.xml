	<!-- ================================ New Sleeve ====================== -->
	<ThoughtDef>
		<defName>AC_NewSleeve</defName>
		<durationDays>12</durationDays>
		<stackLimit>1</stackLimit>
		<nullifyingTraits>
			<li>Transhumanist</li>
			<li>AC_Sleever</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>New sleeve</label>
				<description>I have a new body, this will take some getting used to.</description>
				<baseMoodEffect>-2</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
