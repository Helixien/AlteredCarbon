<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- ================================ Craft Persona stacks ====================== -->
	<RecipeDef>
		<defName>AC_MakeEmptyPersonaStack</defName>
		<label>make empty Persona stack</label>
		<description>Make empty Persona stack.</description>
		<jobString>Making empty Persona stack.</jobString>
		<workAmount>18500</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentSpacer</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Plasteel</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>ComponentSpacer</li>
				<li>Plasteel</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<AC_EmptyPersonaStack>1</AC_EmptyPersonaStack>
		</products>
		<researchPrerequisite>AC_NeuralDigitalization</researchPrerequisite>
		<workSkill>Crafting</workSkill>
		<skillRequirements>
			<Crafting>15</Crafting>
		</skillRequirements>
		<displayPriority>15</displayPriority>
	</RecipeDef>
	<!-- ================================ Archostacks - Install Empty ====================== -->
	<RecipeDef ParentName="SurgeryInstallImplantBase">
		<defName>AC_InstallEmptyArchotechStack</defName>
		<label>install empty archotech stack</label>
		<description>Install an empty archotech stack.</description>
		<descriptionHyperlinks>
			<ThingDef>AC_EmptyArchotechStack</ThingDef>
		</descriptionHyperlinks>
		<workerClass>AlteredCarbon.Recipe_InstallPersonaStack</workerClass>
		<jobString>Installing archotech stack.</jobString>
		<uiIconThing>AC_EmptyArchotechStack</uiIconThing>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>AC_EmptyArchotechStack</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>AC_EmptyArchotechStack</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>Neck</li>
		</appliedOnFixedBodyParts>
		<addsHediff>AC_ArchotechStack</addsHediff>
	</RecipeDef>
