	<!-- ================================ Rewrite filled Persona stacks ====================== -->
	<RecipeDef ParentName="AC_RecipeHacking">
		<defName>AC_RewriteFilledPersonaStack</defName>
		<label>Rewrite Persona stack</label>
		<description>Rewrite a Persona stack.</description>
		<jobString>rewriting Persona stack.</jobString>
		<workerClass>AlteredCarbon.Recipe_RewriteFilledPersonaStack</workerClass>
		<workAmount>10000000000</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>AC_FilledPersonaStack</li>
					</thingDefs>
					<specialFiltersToAllow>
						<li>AC_AllowStacksColonist</li>
						<li>AC_AllowStacksStranger</li>
						<li>AC_AllowStacksHostile</li>
					</specialFiltersToAllow>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>AC_FilledPersonaStack</li>
			</thingDefs>
			<specialFiltersToAllow>
				<li>AC_AllowStacksColonist</li>
				<li>AC_AllowStacksStranger</li>
				<li>AC_AllowStacksHostile</li>
			</specialFiltersToAllow>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>AC_FilledPersonaStack</li>
			</thingDefs>
			<specialFiltersToAllow>
				<li>AC_AllowStacksColonist</li>
				<li>AC_AllowStacksStranger</li>
				<li>AC_AllowStacksHostile</li>
			</specialFiltersToAllow>
		</defaultIngredientFilter>
		<skillRequirements>
			<Intellectual>10</Intellectual>
		</skillRequirements>
		<researchPrerequisites>
			<li>AC_NeuralRewriting</li>
		</researchPrerequisites>
	</RecipeDef>
