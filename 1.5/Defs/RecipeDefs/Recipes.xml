<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!-- ================================ Cortical Stacks - Install Empty ====================== -->
	<RecipeDef ParentName="SurgeryInstallImplantBase">
		<defName>AC_InstallEmptyCorticalStack</defName>
		<label>install empty cortical stack</label>
		<description>Install an empty cortical stack.</description>
		<descriptionHyperlinks>
			<ThingDef>AC_EmptyCorticalStack</ThingDef>
		</descriptionHyperlinks>
		<workerClass>AlteredCarbon.Recipe_InstallCorticalStack</workerClass>
		<jobString>Installing cortical stack.</jobString>
		<uiIconThing>AC_EmptyCorticalStack</uiIconThing>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>AC_EmptyCorticalStack</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>AC_EmptyCorticalStack</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>Neck</li>
		</appliedOnFixedBodyParts>
		<addsHediff>AC_CorticalStack</addsHediff>
	</RecipeDef>
	<!-- ================================ Cortical Stacks - Filled Empty ====================== -->
	<RecipeDef ParentName="SurgeryInstallImplantBase">
		<defName>AC_InstallCorticalStack</defName>
		<label>install filled cortical stack</label>
		<description>Install a cortical stack.</description>
		<descriptionHyperlinks>
			<ThingDef>AC_FilledCorticalStack</ThingDef>
		</descriptionHyperlinks>
		<workerClass>AlteredCarbon.Recipe_InstallFilledCorticalStack</workerClass>
		<jobString>Installing cortical stack.</jobString>
		<uiIconThing>AC_FilledCorticalStack</uiIconThing>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>AC_FilledCorticalStack</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>AC_FilledCorticalStack</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>Neck</li>
		</appliedOnFixedBodyParts>
		<addsHediff>AC_CorticalStack</addsHediff>
	</RecipeDef>
	<!-- ================================ Cortical Stacks - Remove ====================== -->
	<RecipeDef ParentName="SurgeryRemoveImplantBase">
		<defName>AC_RemoveCorticalStack</defName>
		<label>remove cortical stack</label>
		<description>Remove cortical stack.</description>
		<descriptionHyperlinks>
			<ThingDef>AC_FilledCorticalStack</ThingDef>
		</descriptionHyperlinks>
		<workerClass>AlteredCarbon.Recipe_RemoveCorticalStack</workerClass>
		<jobString>Removing cortical stack.</jobString>
		<uiIconThing>AC_FilledCorticalStack</uiIconThing>
		<removesHediff>AC_CorticalStack</removesHediff>
	</RecipeDef>
	<!-- ================================ Cortical Stacks - Destroy ====================== -->
	<RecipeDef Abstract="True" Name="AC_DestroyCorticalStacksBase">
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<workSkill>Crafting</workSkill>
		<effectWorking>ButcherMechanoid</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<uiIconThing>AC_EmptyCorticalStack</uiIconThing>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>AC_BodyPartsUltra</li>
					</categories>
					<disallowedThingDefs>
						<li MayRequire="hlx.UltratechAlteredCarbon">AC_EmptyArchoStack</li>
						<li MayRequire="hlx.UltratechAlteredCarbon">AC_FilledArchoStack</li>
					</disallowedThingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>AC_BodyPartsUltra</li>
			</categories>
		</fixedIngredientFilter>
	</RecipeDef>
	<RecipeDef ParentName="AC_DestroyCorticalStacksBase">
		<defName>AC_ShredCorticalStacks</defName>
		<label>shred cortical stacks</label>
		<description>Shred a cortical stack to try to salvage usable material.</description>
		<jobString>Shredding cortical stacks.</jobString>
		<workAmount>400</workAmount>
		<skillRequirements>
			<Crafting>5</Crafting>
		</skillRequirements>
		<products>
			<ComponentSpacer>1</ComponentSpacer>
			<Plasteel>5</Plasteel>
		</products>
	</RecipeDef>
	<RecipeDef ParentName="AC_DestroyCorticalStacksBase">
		<defName>AC_SmashCorticalStacks</defName>
		<label>smash cortical stacks</label>
		<description>Smash a cortical stack with simple hand tools to salvage usable material.</description>
		<jobString>Smashing cortical stacks.</jobString>
		<workAmount>550</workAmount>
		<skillRequirements>
			<Crafting>3</Crafting>
		</skillRequirements>
		<products>
			<Plasteel>3</Plasteel>
		</products>
	</RecipeDef>
</Defs>