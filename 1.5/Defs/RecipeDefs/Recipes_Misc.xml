<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- ================================ Neural Stack - Crafting====================== -->
	<RecipeDef>
		<defName>AC_MakeEmptyNeuralStack</defName>
		<label>Make neural stack</label>
		<description>Make a neural stack.</description>
		<jobString>Making neural stack.</jobString>
		<workAmount>18500</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentSpacer</li>
					</thingDefs>
				</filter>
				<count>4</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Plasteel</li>
					</thingDefs>
				</filter>
				<count>12</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>4</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>ComponentSpacer</li>
				<li>Plasteel</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<AC_EmptyNeuralStack>1</AC_EmptyNeuralStack>
		</products>
		<researchPrerequisite>AC_NeuralDigitalization</researchPrerequisite>
		<workSkill>Crafting</workSkill>
		<skillRequirements>
			<Crafting>12</Crafting>
		</skillRequirements>
		<displayPriority>15</displayPriority>
	</RecipeDef>
