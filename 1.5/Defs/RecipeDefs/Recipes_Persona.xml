<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- ================================ Neural Editing -  Base ====================== -->
	<RecipeDef Name="AC_RecipeNeuralEditing" Abstract="True">
		<workSpeedStat>ResearchSpeed</workSpeedStat>
		<effectWorking>AC_NeuralEditing</effectWorking>
		<soundWorking>AC_Interact_NeuralEditing</soundWorking>
	</RecipeDef>
	<!-- ================================ Neural Editing - Duplicate filled Persona stacks ====================== -->
	<RecipeDef ParentName="AC_RecipeNeuralEditing">
		<defName>AC_DuplicatePersonaStack</defName>
		<label>Duplicate persona stack</label>
		<description>Duplicate the content of a filled persona stack, effectively creating a "clone" or "duplicate" of the consciousness stored on the original stack.</description>
		<jobString>Duplicating persona stack.</jobString>
		<workerClass>AlteredCarbon.Recipe_DuplicatePersonaStack</workerClass>
		<workAmount>8000</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>AC_EmptyPersonaStack</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>AC_FilledPersonaStack</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>AC_EmptyPersonaStack</li>
				<li>AC_FilledPersonaStack</li>
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>AC_EmptyPersonaStack</li>
				<li>AC_FilledPersonaStack</li>
			</thingDefs>
		</defaultIngredientFilter>
		<skillRequirements>
			<Intellectual>10</Intellectual>
		</skillRequirements>
	</RecipeDef>
	<!-- ================================ Neural Editing - Duplicate filled Persona stacks ====================== -->
	<RecipeDef ParentName="AC_RecipeNeuralEditing">
		<defName>AC_RestoreStackFromPersonaPrint</defName>
		<label>Restore persona stack from print</label>
		<description>Download the neural snapshot from a persona print to an empty persona stack, effectively birthing a new consciousness. If the person of whom the persona print was made is still alive or their original persona stack is still intact, this process will create a "duplicate" of them.</description>
		<jobString>downloading persona print to stack.</jobString>
		<workerClass>AlteredCarbon.Recipe_RestoreStackFromPersonaPrint</workerClass>
		<workAmount>5000</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>AC_EmptyPersonaStack</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>AC_PersonaPrint</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>AC_EmptyPersonaStack</li>
				<li>AC_PersonaPrint</li>
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>AC_EmptyPersonaStack</li>
				<li>AC_PersonaPrint</li>
			</thingDefs>
		</defaultIngredientFilter>
		<skillRequirements>
			<Intellectual>10</Intellectual>
		</skillRequirements>
	</RecipeDef>
	<!-- ================================ Neural Editing - Persona stacks ====================== -->
	<RecipeDef ParentName="AC_RecipeNeuralEditing">
		<defName>AC_EditFilledPersonaStack</defName>
		<label>Modify persona stack</label>
		<description>Modify the neural data stored on an active persona stack. This process can take not only time, but can also be very destructive on the consciousness stored on the selected stack.</description>
		<jobString>Modifying persona stack.</jobString>
		<workerClass>AlteredCarbon.Recipe_EditFilledPersonaStack</workerClass>
		<workAmount>10000000000</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>AC_FilledPersonaStack</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>AC_FilledPersonaStack</li>
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>AC_FilledPersonaStack</li>
			</thingDefs>
		</defaultIngredientFilter>
		<skillRequirements>
			<Intellectual>10</Intellectual>
		</skillRequirements>
		<researchPrerequisites>
			<li>AC_NeuralEditing</li>
		</researchPrerequisites>
	</RecipeDef>
	<!-- ================================ Neural Editing - Wipe Persona stacks ====================== -->
	<RecipeDef ParentName="AC_RecipeNeuralEditing">
		<defName>AC_WipeFilledPersonaStack</defName>
		<label>Erase persona stack</label>
		<description>Erase all content from a selected active persona stack, effectively killing the consciousness stored on it. The stack can afterwards be reused for someone else.</description>
		<jobString>Erasing persona stack.</jobString>
		<workerClass>AlteredCarbon.Recipe_WipeFilledPersonaStack</workerClass>
		<workAmount>12500</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>AC_FilledPersonaStack</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>AC_FilledPersonaStack</li>
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>AC_FilledPersonaStack</li>
			</thingDefs>
		</defaultIngredientFilter>
		<skillRequirements>
			<Intellectual>8</Intellectual>
		</skillRequirements>
	</RecipeDef>
</Defs>