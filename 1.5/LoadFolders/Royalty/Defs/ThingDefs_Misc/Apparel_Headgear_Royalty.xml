			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
			<researchPrerequisite>AC_AdvancedPoweredArmor</researchPrerequisite>
			<workSkill>Crafting</workSkill>
			<skillRequirements>
				<Crafting>10</Crafting>
			</skillRequirements>
