<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Ideology</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- ================================ Replace effect with DLCs ====================== -->
				<li Class="PatchOperationReplace">
					<xpath>/Defs/RecipeDef[@Name="AC_RecipeHacking"]/effectWorking</xpath>
					<value>
						<effectWorking>Hacking</effectWorking>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs</xpath>
					<value>
						<HistoryEventDef>
							<defName>AC_InstalledPersonaStack</defName>
							<label>installed persona stack</label>
						</HistoryEventDef>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>